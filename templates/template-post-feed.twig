{% extends "base.twig" %}


{% block content %}
  {% block page_topper %}
    {% if post.title %}
      <h1 class="page-h1">{{post.title}}</h1>
    {% endif %}

    {% if post.content %}
      <div class="article-body">
        {{post.content}}
      </div>
    {% endif %}

  {% endblock %}
  {% block page_body %}
    {% include 'components/paginated-grid.twig'  %}
  {% endblock %}
{% endblock %}
