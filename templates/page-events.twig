{% extends "base.twig" %}

{% block content %}

  {% block page_topper %}
    {% if post.title %}
      <h1 class="page-h1">{{post.title}}</h1>
    {% endif %}
    {% if post.content %}
      <div class="article-body">
        {{post.content}}
      </div>
    {% endif %}
    <div class="events-mod">
      {% for event in events|sort %}
        <h1>{{event.info_date|date}} {{ "now"|date }}</h1>
        {% if date(event.info_date|date) > ( "now"|date ) %}
          <dl class="event">

            <dt class="event__title">{{event.info_date|date("F j, Y")}}</dt>
            <dd class="event__desc"><a class="event__link" href="{{event.link}}">{{event.title}} at {{event.location}}, {{event.info_time}}</a></dd>
          </dl>
        {% endif %}
      {% endfor %}
    </div>
  {% endblock %}
{% endblock %}

