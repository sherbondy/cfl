{% extends "base.twig" %}

{% block content %}
	<article class="post-type-{{post.post_type}}" id="post-{{post.ID}}">
		<section class="page-content">
			<h1 class="page-h1">{{post.title}}</h1>
			<div class="article-body">
				{{post.content}}
			</div>
				{% include 'components/repeater.twig' with {'content': post.get_field('default_repeater')} %}

			{% if post.get_field('shortcode') %}
				<div class="instagram__feed">
					<h4> {{post.get_field('feed_title')}}</h4>
					<div class="content">{{post.get_field('shortcode')}}</div>
				</div>
			{% endif %}

    {% block additional_content %}
    {% endblock additional_content %}
		</section>
	</article>
{% endblock %}
