<article class="tease tease-{{post.post_type}}" id="tease-{{post.ID}}">
	{% block content %}

    <img src="{{post.thumbnail.src}}" />

		<h2 class="h2"><a href="{{post.link}}">{{post.title}}</a></h2>
		<p>{{post.get_preview|excerpt(50)}}</p>
		{% if post.get_thumbnail %}
			<img src="{{post.thumbnail.src}}" />
		{% endif %}
	{% endblock %}
</article>
