{% if pagination.pages %}
  <div class="pagination__mod">
      <ul class="pagination__list">

        {% if pagination.prev %}
          <li class="pagination__item">
            <a href="{{pagination.prev.link}}" class="pagination__link pagination__link--prev {{pagination.prev.link|length ? '' : 'invisible'}}">Prev</a>
          </li>
        {% endif %}

        {% for page in pagination.pages %}
          <li class="pagination__item">
            {% if page.link %}
              <a class="pagination__link" href="{{page.link}}">{{page.title}}</a>

            {% elseif page.title == current_page %}
              <span class="pagination__link pagination__link--active">{{page.title}}</span>
            {% else %}
              <span class="pagination__link pagination__link--ellip">{{page.title}}</span>
            {% endif %}
          </li>
        {% endfor %}

        {% if pagination.next %}
          <li class="pagination__item">
            <a href="{{pagination.next.link}}" class="pagination__link pagination__link--next {{pagination.next.link|length ? '' : 'invisible'}}">Next</a>
          </li>
        {% endif %}
      </ul>
  </div>
{% endif %}
