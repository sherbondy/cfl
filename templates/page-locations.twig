{% extends "base.twig" %}

{% block head %}
  <script type="text/javascript">
    var apiResponse= {{apiResponse}};
  </script>
  <script src="http://maps.google.com/maps/api/js?key=AIzaSyALZaQqg4ZNCJr2tLiicJJr4iUtUoz9A_s&?sensor=false"
            type="text/javascript"></script>
{% endblock %}

{% block topper %}
  <div class="map-container map-container--index" id="map"></div>
  <div class="locations-form__mod">
    <form action="">
      <div class="location-form__select-mod">
        <label for="showing">Showing</label>
        <select name="" id="showing">
          <option value="all">All Locations</option>
          <option value="all">Trucks</option>
          <option value="all">Restaurant</option>
        </select>
      </div>
      <div class="location-form__select-mod">
        <label for="sort">Sort by</label>
        <select name="" id="sort">
          <option value="all">Distance</option>
          <option value="all">Location</option>
          <option value="all">Open</option>
        </select>
      </div>
    </form>
  </div>
{% endblock %}


{% block content %}
  <ul class="locations-mod">
  </ul>
  <div class="lcoation-footer">
    <div class="location-cta">
      <h5 class="location-cta__h">Uh oh, too far away?</h5>
      <p class="location-cta__text">Hopefully there is a Clover near you. If not, you can be a part of our expansion by suggesting great Clover locations. <a href="https://cloverfoodlab.wufoo.com/forms/request-a-clover-location/">Suggest a new home for the next Clover!</a></p>
    </div>
  </div>
{% endblock %}

{% block scripts %}
    <script src="{{site.theme.link}}/bower_components/moment/min/moment.min.js"></script>
    <script src="{{site.theme.link}}/static/js/clover-api.js"></script>
{% endblock %}
